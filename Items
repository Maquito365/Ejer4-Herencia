public class Items{
    private String nombre;
    private String efecto;
    private int valor;

    public Items(String nombre, String efecto, int valor) {
        this.nombre = nombre;
        this.efecto = efecto;
        this.valor = valor;
    }

    public String getNombre() {
        return nombre;
    }
    public String getEfecto() {
        return efecto;
    }
    public int getValor() {
        return valor;
    }
    //Este m√©todo ayuda a usar el item en el combatiente que el usuario elija
    public void usar(Combatientes objetivo){
        switch (efecto.toLowerCase()){
            case "curar":
                objetivo.recibirDano(-valor);
                System.out.println(objetivo.getNombre() + " ha sido curado por " + valor + " puntos.");
                break;
            case "aumentoatq":
                objetivo.aplicarAumentoAtaque(valor);
                System.out.println(objetivo.getNombre() + " ha aumentado su ataque en " + valor + " puntos.");
                break;
            case "escudo":
                objetivo.activarEscudo(valor);
                System.out.println(objetivo.getNombre() + " ha aumentado su defensa en " + valor + " puntos.");
                break;
            case: "turnoExtra":
                objetivo.otorgarTurnoExtra();
                System.out.println(objetivo.getNombre() + " ha ganado un turno extra.");
                break;
            default:
                System.out.println("Efecto desconocido.");
        }
    }
}