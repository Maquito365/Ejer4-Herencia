public class HabilidadEspecial{
    private String nombre;
    private String efecto;
    private int valor;
    private int duracion;

    public HabilidadEspecial(String nombre, String efecto, int valor) {
        this.nombre = nombre;
        this.efecto = efecto;
        this.valor = valor;
        this.duracion = duracion;
    }

    public String getNombre() {
        return nombre;
    }
    public String getEfecto() {
        return efecto;
    }
    public int getValor() {
        return valor;
    }
    public int getDuracion() {
        return duracion;
    }
    //Método de los enemigos para aplicar efectos a los jugadores
    public void aplicarHabilidad(Combatiente objetivo){
        switch(efecto.toLowerCase()){
            case "envenenar":
                objetivo.recibiriDano(valor);
                System.out.println(objetivo.getNombre() + " ha sido envenenado y recibe " + valor + " de daño.");
                break;
            case "inhabilitar":
                objetivo.setInhabilitado(true);
                System.out.println(objetivo.getNombre() + " ha sido inhabilitado por " + duracion + " turnos.");
                break;
            case "AumentoAtq":
                objetivo.aplicarAumentoAtaque(valor);
                System.out.println(objetivo.getNombre() + " ha aumentado su ataque en " + valor + " puntos.");
                break;
            default:
                System.out.println("Habilidad no existente");
        }   
    }
    //Otro tipo de habilidad para aplicar a múltiples objetivos
    public void aplicarHabilidadMultiple(Combatientes [] objetivos){
        if(efecto.equalsIgnoreCase("daño multiple")){
            for(Combatiente objetivo : objetivos){
                objetivo.recibiridaño(valor);
                System.out.println(objetivo.getNombre() + " recibe " + valor + " de daño.");
            }
        } else {
            System.out.println("Esta habilidad no es de daño múltiple");
        }
    }
}